{% extends "bootstrap/base.html" %}


{% block content %}
  <h2>NEWS!!!!</h2>
<div class="row">
<div class="col-md-3">
  <div class="container">
  <div class="jumbotron">
    <h3>All teams competing in {{year}}</h3>
    {% for team in participants %}
      <button class="btn btn-danger">{{team}}</button>
    {% endfor %}
  </div>
</div>
</div>
<div class="col-md-6">
  <div class="container">
    <div class="jumbotron">
      <h1 class="text-center">The {{year}} World Cup summarized!</h1>
      <ul>
        {% for p in range(0,data|length) %}
          {% for i in range(0,data[p]|length) %}
            <li>{{data[p][i]}}</li>
          {% endfor %}
        {% endfor %}
      </ul>
    </div>
  </div>

</div>
  <div class="col-md-3">
    <div class="container">

    <div class="jumbotron">

    </div>
  </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <div class="container">
      <div class="jumbotron">

      </div>
    </div>
  </div>
<div class="col-md-6">
  <div class="container">
    <div class="jumbotron">
      {% for n in range(0,news["articles"]|length) %}
      <ul>
      <li>{{news["articles"][n]["title"]}}</li>
      <!-- <img src="{{news["articles"][n]["urlToImage"]}}"> -->
      <a href="{{news["articles"][n]["url"]}}">Read it at {{news["articles"][n]["source"]["name"]}}</a>
      </ul>
      {% endfor %}
    </div>
  </div>
</div>
<div class="col-md-3">
  <div class="container">
    <div class="jumbotron">

    </div>
  </div>
</div>
</div>
{% endblock %}
