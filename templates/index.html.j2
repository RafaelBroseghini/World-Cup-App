{% extends "bootstrap/base.html" %}

{% block styles %}
  {{super()}}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" />
{% endblock %}

{% block content %}
<section id="main">
  <div class="ui grid">


  <div class="row">
  <div class="three wide column">
    <div class="ui container">

    <div class="ui segment">
        <h3 class="text-center">All time Winners!</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Winners</th>
            <th scope="col"><i class="trophy icon"></i></th>
          </tr>
        </thead>
        <tbody>
          {% for winner in range(0, winners|length-1) %}
          <tr>
            <th scope="row">{{winners[winner][0]}}</th>
            <td>{{winners[winner][1]}}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
  </div>
</div>
  </div>
  <div class="ten wide column">
    <div class="ui container">

  <div class="ui segment">
    <!-- <div class="jumbotron"> -->
      <h2 class="text-center">Select a year you would like to know more about!</h2>
      <form class="" action="/getworldcup" method="get">
        <div class="form-group">
        <label for="q">Year:</label>
        <select name="q" class="form-control" required>
          {% for c in range(1,years|length) %}
          <option value="{{years[c][0]}}">{{years[c][0]}}</option>
          {% endfor %}
        </select>
      </div>
        <button class="ui inverted red button" type="submit">
          World Cup!
        </button>
      </form>
    <!-- </div> -->
  </div>
</div>
</div>
<div class="three wide column">
  <div class="ui segment">

  </div>
</div>
</div>
</div>
</section>

{% endblock %}

{% block scripts %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
{% endblock %}
